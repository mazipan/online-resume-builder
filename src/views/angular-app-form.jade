div(class='fullwidth inline')
    h2(class='inline') Product Form
form(role="form" class="form-horizontal")
    div(id="form-error-message" ng-show="errormessage !== ''")
        div(class="alert alert-danger")
            strong Error!
            span(ng-bind="errormessage")
    div(class="form-group")
        label(class="control-label col-sm-2" for="title") Product Title :
        div(class="col-sm-10")
            input(type='text', name='title', id='title', ng-model="selectedProduct.title", class="form-control", required)
    div(class="form-group")
        label(class="control-label col-sm-2" for="description") Product Description :
        div(class="col-sm-10")
            textarea(name='description', id='description', ng-model="selectedProduct.description", class="form-control")
    div(class="form-group")
        label(class="control-label col-sm-2" for="price") Product Price :
        div(class="col-sm-10")
            div(class="input-group")
                div(class="input-group-addon") Rp
                input(type='number', name='price', id='price', ng-model="selectedProduct.price", class="form-control")
                div(class="input-group-addon") .00
    div(class="form-group")
        div(class="col-sm-2")
        div(class="col-sm-10")
            a(href="#insert" ng-click="angularSubmitSaveForm()" ng-show="isNewData" class='btn btn-success margin')
                    span(class="glyphicon glyphicon-floppy-disk" aria-hidden="true")
                    span(class="margin") Save
            a(href="#update" ng-click="angularSubmitUpdateForm()" ng-show="!isNewData" class='btn btn-success margin')
                    span(class="glyphicon glyphicon-floppy-disk" aria-hidden="true")
                    span(class="margin") Save
            a(href="#home" ng-click="goesToTable()" class='btn btn-danger margin')
                span(class="glyphicon glyphicon-arrow-left" aria-hidden="true")
                span(class="margin") Cancel

