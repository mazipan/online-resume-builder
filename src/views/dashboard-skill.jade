div(class="row" id="skills" style="display:none;")
	div(class="col-md-12")
		h2(class="page-title") Skill / Ability

	div(class="col-md-12")
		form(role="form" class="form-horizontal" id="form-skill")
			div(class="form-group")
				div(class="col-sm-8")
					input(type="text" id="skillname" name="skillname" class="form-control" placeholder="Type your skill / ability here" required autofocus)
			div(class="form-group")
				div(class="col-sm-6")
					input(type="range" class="form-control" value="0" min="0" max="10" step="1" onchange="changeLevelSlide(event)" id="skilllevelslider")
				div(class="col-sm-2")
					input(type="number" class="form-control" placeholder="Level of skill" value="0" min="0" max="10" step="1" id="skilllevel")
			div(class="form-group")
				div(class="col-sm-8")
					a(href="#" onclick="submitNewSkill()" class='btn btn-info')
						span(class="glyphicon glyphicon-floppy-disk" aria-hidden="true")
						span(class="margin") Add new skill / ability

	div(class="col-md-12" id="container-skill")

