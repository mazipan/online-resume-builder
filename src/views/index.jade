doctype html
html(lang="en")
head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1")
    meta(name="description" content="Resume Builder | Tools for create your beauty resume")
    meta(name="author" content="irfan.maulana")
    title Resume Builder
    link(rel="stylesheet" href="/stylesheets/font-awesome.min.css")
    link(rel="stylesheet" href="/stylesheets/bootstrap.min.css")
    link(rel="stylesheet" href="/stylesheets/bootstrap-social.css")
    link(rel="stylesheet" href="/stylesheets/fileinput.min.css")
    link(rel="stylesheet" href="/stylesheets/harmony.css")
body
    div(class="brand clearfix")
        a(href="/" class="logo")
            img(src="images/logo.jpg" class="img-responsive" alt="")
        span(class="menu-btn")
            i(class="fa fa-bars")
        ul(class="ts-profile-nav")
            li
                a(href="/about-resume-builder") About Us
    div(class="login-page bk-img" style="background-image: url(images/login-bg.jpg)")
        div(class="form-content")
            div(class="container")
                div(class="row")
                    div(class="col-md-6 col-md-offset-3")
                        h1(class="text-center text-bold text-light mt-4x") Resume Builder
                        h3(class="text-center text-bold text-light") Tools for create your beauty resume
                        div(class="row pt-2x pb-3x")
                            a(href="login" class="btn btn-success btn-block mt-4x" type="submit")
                                span(class="fa-2x") Login
                            a(href="register" class="btn btn-danger btn-block mt-4x" type="submit")
                                span(class="fa-2x") Register Now

script(src="/javascripts/library/jquery-1.11.0.min.js")
script(src="/javascripts/library/bootstrap.min.js")
script(src="/javascripts/library/html5shiv.js")
script(src="/javascripts/library/respond.min.js")
script(src="/javascripts/library/fileinput.js")