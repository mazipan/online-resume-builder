extends layout

block content
    div(class='fullwidth inline')
        h2(class='inline') Product List
        a(href='#{root}/app/form', class='btn btn-info btn-lg margin inline right')
            span(class="glyphicon glyphicon-plus" aria-hidden="true")
            span(class="margin") Add New
    div(id="form-error-message")
    table.table.table-striped
        thead
            tr
                th No
                th Title
                th Description
                th Price
                th Last Update
                th Action
        tbody
        - each product, index in products
            tr
              td
                = index+1
              td
                = product.title
              td
                = product.description
              td
                = product.price
              td
                = product.modified
              td
                a(href='./app/form/#{product._id}', class='btn btn-success margin')
                    span(class="glyphicon glyphicon-pencil" aria-hidden="true")
                    span(class="margin") Update
                a(href='#delete', onclick="submitDelete('#{product._id}')" class='btn btn-danger margin')
                    span(class="glyphicon glyphicon-trash" aria-hidden="true")
                    span(class="margin") Delete
